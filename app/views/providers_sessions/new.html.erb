<%= render "layouts/flash_alerts" %>
<div class="container mh-630">
  <div class="row mt-63">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <div class="panel panel-primary">
        <div class="panel-heading medium">Ingresa como proveedor</div>
        <div class="panel-body">
          <%= form_tag providers_sessions_path do %>
            <div class="form-group">
              <%= label_tag :email, "Correo electrónico" %>
              <%= email_field_tag :email, params[:email], :autofocus => true, class: "form-control", id: "provider_login_email" %>
            </div>

            <div class="form-group">
              <%= label_tag :password, "Contraseña" %><br />
              <%= password_field_tag :password, nil, class: "form-control", id: "provider_password_email"  %>
            </div>

            <%= submit_tag "Ingresa", id: "provider_login_button",  class: "form-control btn btn-primary" %>

          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>